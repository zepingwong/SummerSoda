{
  "name": "summersoda",
  "version": "1.0.0",
  "description": "A beautiful blog theme",
  "author": "reco_luan",
  "scripts": {
    "build": "vuepress build .",
    "commit": "git add . && git-cz",
    "dev": "vuepress dev . --open --host \"localhost\"",
    "push": "npm run commit && git push origin"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.{js,ts,vue}": [
      "eslint --fix --ext .js,.vue ./",
      "git add"
    ],
    "package.json": [
      "sort-package-json",
      "git add"
    ]
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-customizable"
    }
  },
  "dependencies": {
    "@vuepress/plugin-last-updated": "^1.9.7",
    "clipboard": "^2.0.4",
    "md5": "2.3.0",
    "moment": "^2.29.3",
    "vue": "^2.6.14"
  },
  "devDependencies": {
    "@commitlint/cli": "^16.3.0",
    "@commitlint/config-conventional": "^16.2.4",
    "@types/events": "^3.0.0",
    "@types/jest": "^26.0.15",
    "@types/unist": "^2.0.3",
    "@types/vfile": "^4.0.0",
    "@types/vfile-message": "^2.0.0",
    "@vssue/api-bitbucket-v2": "^1.1.1",
    "@vssue/api-gitee-v5": "^1.4.4",
    "@vssue/api-github-v3": "^1.4.4",
    "@vssue/api-github-v4": "^1.2.0",
    "@vssue/api-gitlab-v4": "^1.1.1",
    "@vuepress/plugin-blog": "1.9.4",
    "@vuepress/plugin-medium-zoom": "1.5.0",
    "@vuepress/shared-utils": "1.8.2",
    "babel-eslint": "^10.1.0",
    "commitizen": "^4.1.2",
    "concurrently": "^5.3.0",
    "conventional-changelog-cli": "^2.0.34",
    "cz-customizable": "^6.2.0",
    "docsearch.js": "2.6.3",
    "eslint": "^6.8.0",
    "eslint-plugin-vue": "^6.2.2",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.7",
    "sort-package-json": "1.57.0",
    "timers": "^0.1.1",
    "valine": "^1.4.14",
    "vssue": "^1.4.6",
    "vue-click-outside": "1.1.0",
    "vue-property-decorator": "^9.1.2",
    "vuepress": "1.9.7",
    "vuepress-plugin-container": "^2.1.5",
    "vuepress-plugin-smooth-scroll": "^0.0.10"
  },
  "publishConfig": {
    "access": "public"
  }
}
